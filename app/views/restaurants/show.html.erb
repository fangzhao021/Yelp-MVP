<div class="restaurant">
  <h1><%= @restaurant.name %></h1>
  <p><strong>Type of food: </strong><%= @restaurant.category %>
  <br>
  <strong>Address: </strong><%= @restaurant.address %>
  <br>
  <strong>Contact number: </strong><%= @restaurant.phone_number %></p>

  <% @restaurant.reviews.each do |review| %>
    <p><strong>Rating: </strong><%= review.rating %></p>
    <p><strong>Reviews: </strong><%= review.content %></p>
  <br>
  <% end %>

<%= link_to "Back to restaurant list", restaurants_path %>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
</div>
